<Window x:Class="LangParse2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="rtbSourceLang" Margin="10,85,5,10" Padding="10" >
        </RichTextBox>
        <RichTextBox x:Name="rtbTargetLang" Margin="5,85,10,10" Grid.Column="1" />
        <StackPanel Height="31" Margin="10,35,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Orientation="Horizontal">
            <ComboBox x:Name="cbSourceLang" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Height="30" BorderBrush="White" SelectedIndex="0" FontSize="17.333" Margin="0,0,10,0">
                <ComboBoxItem Content="Java"/>
            </ComboBox>
            <ComboBox x:Name="cbTargetLang" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Height="30" BorderBrush="White" SelectedIndex="0" FontSize="17.333" Margin="0,0,10,0">
                <ComboBoxItem Content="Swift"/>
            </ComboBox>
            <Button x:Name="btnStartParse" Content="Iniciar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Height="30" BorderBrush="#FFDDDDDD" FontSize="17.333" Click="btnStartParse_Click"/>
        </StackPanel>


    </Grid>
</Window>
